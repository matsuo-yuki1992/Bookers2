<div class="container px-5 px-sm-0">
  <div id="error_explanation">
    <% if @book_new.errors.any? %>
    <h3>
      <%= @book_new.errors.count %>errors prohibited this obj from being saved:
    </h3>
    <ul>
      <% @book_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render "users/info",user: @user %>
      <%= render 'bookpost', book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="col-1"></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
          <tr>
            <td><%= link_to image_tag(books.user.get_profile_image(80,80)),user_path(books.user_id) %></td>
            <td><%= link_to books.title,book_path(books.id) %></td>
            <td><%= books.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

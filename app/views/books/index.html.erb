<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr><th>name</th><th><%= @user.name %></th></tr>
          <tr><th>introduction</th><th><%= @user.introduction %></th></tr>
        </tbody>
      </table>
      <div class="row"><%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>
      </div>
      <%= render 'bookpost', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="col-1"></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
          <tr>
            <td><%= link_to image_tag(books.user.get_profile_image(80,80)),user_path(books.user_id) %></td>
            <td><%= link_to books.title,book_path(books.id) %></td>
            <td><%= books.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

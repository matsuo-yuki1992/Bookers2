<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
    <div class="row"><%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fa-solid fa-user-gear"></i>
  <% end %>
    </div>
    <%= render "bookpost", book: @book %>
  </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <% @books.each do |books| %>
          <tr>
            <td class="col-1"><%= link_to image_tag(books.user.get_profile_image(100,100)),user_path(books.user_id) %><br><%= books.user.name %></td>
            <td class="col-2"><%= link_to books.title, book_path %></td>
            <td><%= books.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
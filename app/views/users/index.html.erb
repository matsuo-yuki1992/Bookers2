<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "info",user: @user %>
      <%= render "books/bookpost",book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <tbody>
            <% @users.each do |users| %>
          <tr>
            <td><%= link_to image_tag(users.get_profile_image(80,80)),user_path(@user[:id]) %></td>
            <td></td>
            <td></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>